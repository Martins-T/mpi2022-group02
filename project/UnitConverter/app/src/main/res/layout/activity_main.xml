<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#212123"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/unit_converter_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Unit Converter"
        android:textColor="#EF6C00"
        android:textStyle="bold"
        android:textSize="32dp"
        app:drawableEndCompat="@drawable/sliders_48"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:drawableRight="@drawable/dumbbell_96"
            android:text="Weight"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textAllCaps="false"
            android:backgroundTint="#4E8542"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:drawableRight="@drawable/measuring_tape_96"
            android:text="Length"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textAllCaps="false"
            android:backgroundTint="#1B587C"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:drawableRight="@drawable/speedometer_96"
            android:text="Speed"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textAllCaps="false"
            android:backgroundTint="#9F2936"/>

    </LinearLayout>

    <TextView
        android:id="@+id/developed_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:text="Developed by Group 2"
        android:textColor="#EF6C00"
        android:textSize="14sp"
        android:drawableStart="@drawable/tools_48"
        android:drawablePadding="3dp"
        />

</RelativeLayout>